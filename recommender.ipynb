import pandas as pd
import numpy as np
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.metrics.pairwise import cosine_similarity
from nltk.sentiment import SentimentIntensityAnalyzer

# Assume df has columns: 'title', 'overview', 'year', etc.

# --- 1. Sentiment preparation ---
sia = SentimentIntensityAnalyzer()
df = df.copy()  # avoid modifying the original
df["overview"] = df["overview"].fillna("")
df["sentiment"] = df["overview"].apply(lambda x: sia.polarity_scores(str(x))["compound"])

# --- 2. Content-based recommendation ---
tfidf = TfidfVectorizer(stop_words="english")
tfidf_matrix = tfidf.fit_transform(df["overview"])
cosine_sim = cosine_similarity(tfidf_matrix, tfidf_matrix)

def recommend_content(movie_title, top_k=10):
    if movie_title not in df["title"].values:
        print(f"Movie '{movie_title}' not found!")
        return pd.DataFrame(columns=["title", "sim_score"])
    
    idx = df.index[df["title"] == movie_title][0]
    sims = cosine_sim[idx]
    
    sim_idx = sims.argsort()[::-1][1:top_k+1]  # exclude itself
    recommendations = df.iloc[sim_idx].copy()
    recommendations["sim_score"] = sims[sim_idx]
    
    return recommendations[["title", "sim_score"]]

# --- 3. Sentiment-based recommendation ---
def recommend_sentiment(movie_title, top_k=10):
    if movie_title not in df["title"].values:
        print(f"Movie '{movie_title}' not found!")
        return pd.DataFrame(columns=["title", "sentiment", "sent_diff"])
    
    target_sent = df.loc[df["title"] == movie_title, "sentiment"].values[0]
    temp_df = df.copy()
    temp_df["sent_diff"] = (temp_df["sentiment"] - target_sent).abs()
    
    recommendations = temp_df.sort_values("sent_diff").iloc[1:top_k+1].copy()
    return recommendations[["title", "sentiment", "sent_diff"]]

# --- 4. Hybrid recommendation ---
def recommend_hybrid(movie_title, top_k=5):
    # Get content & sentiment recommendations (more than top_k for flexibility)
    content_recs = recommend_content(movie_title, top_k*2)
    sentiment_recs = recommend_sentiment(movie_title, top_k*2)
    
    # Merge on title
    merged = pd.merge(content_recs, sentiment_recs, on="title")
    
    # Compute hybrid score: lower = better
    merged["hybrid_score"] = merged["sent_diff"] * 0.3 - merged["sim_score"]  # example formula
    merged = merged.sort_values("hybrid_score").head(top_k)
    
    return merged[["title", "sim_score", "sentiment", "sent_diff", "hybrid_score"]]
